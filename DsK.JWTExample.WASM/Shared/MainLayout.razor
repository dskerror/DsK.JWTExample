@inherits LayoutComponentBase
@using DsK.JWTExample.WASM.Pages
<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <Login />
    </NotAuthorized>
</AuthorizeView>


@code {

    protected override async Task OnInitializedAsync()
    {
        await _securityServiceClient.PrepareBearerToken();
    }
}